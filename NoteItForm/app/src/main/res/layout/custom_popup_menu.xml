<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popupContainer"
    android:layout_width="wrap_content"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Comment Item -->
        <LinearLayout
            android:id="@+id/menuComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/add" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comment"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Action Item with Expandable Submenu -->
        <LinearLayout
            android:id="@+id/menuActionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Action Header -->
            <LinearLayout
                android:id="@+id/menuAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/actionMenuIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/add" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Action"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!-- Submenu Container (Initially Hidden) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/dark_grey"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/submenuContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:background="@color/white">

                    <!-- Create Action -->
                    <LinearLayout
                        android:id="@+id/submenuCreateAction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:paddingStart="48dp"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/add_box" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Action"
                            android:textSize="14sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <!-- Link Existing Action -->
                    <LinearLayout
                        android:id="@+id/submenuLinkAction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:paddingStart="48dp"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/link" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Link Existing Action(s)"
                            android:textSize="14sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>