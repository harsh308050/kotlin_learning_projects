<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NoteItForm" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.NoteItForm" parent="Base.Theme.NoteItForm" />
    <style name="OrangeDateTimePicker" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:colorAccent">@color/orange</item>
        <item name="android:colorPrimary">@color/orange</item>
        <item name="android:colorPrimaryDark">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_grey</item>
    </style>

    <!-- For the calendar widget specifically -->
    <style name="OrangeCalendarView" parent="android:Widget.Material.CalendarView">
        <item name="android:colorAccent">@color/orange</item>
        <item name="android:colorPrimary">@color/orange</item>
    </style>
</resources>