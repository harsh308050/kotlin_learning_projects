<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".manager.settings.ManagerSettingsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="22sp" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/manager_profile_image"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/siteeee" />
                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:id="@+id/manager_profile_edit_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/floating_btn"
                        android:backgroundTint="@color/primary_blue"
                        android:padding="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/edit"
                        app:tint="@color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/manager_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Harsh Parmar"
                    android:textColor="@color/primary_blue"
                    android:textFontWeight="600"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/manager_profile_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Manager"
                        android:textColor="@color/light_grey"
                        android:textFontWeight="400"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/circular_border"
                        android:backgroundTint="@color/light_grey" />

                    <TextView
                        android:id="@+id/manager_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="harshparmar308050@gmail.com"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="General"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_grey"
                        android:textFontWeight="500"
                        android:textSize="18sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/white_light_variant"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/manager_profile_settings_tab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/circular_border"
                                    android:backgroundTint="@color/blue_light"
                                    android:padding="10dp"
                                    android:src="@drawable/people_group"
                                    app:tint="@color/primary_blue_dark" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Profile Information"
                                        android:textColor="@color/black"
                                        android:textFontWeight="400"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Update your profile"
                                        android:textColor="@color/light_grey"
                                        android:textFontWeight="400"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:padding="8dp"
                                    android:src="@drawable/arrow_right"
                                    app:tint="@color/light_grey" />
                            </LinearLayout>

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="1dp" />

                            <LinearLayout
                                android:id="@+id/manager_notification_settings_tab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/circular_border"
                                    android:backgroundTint="@color/blue_light"
                                    android:padding="13dp"
                                    android:src="@drawable/notification"
                                    app:tint="@color/primary_blue_dark" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Notification Preferences"
                                        android:textColor="@color/black"
                                        android:textFontWeight="400"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Your notifications"
                                        android:textColor="@color/light_grey"
                                        android:textFontWeight="400"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:padding="8dp"
                                    android:src="@drawable/arrow_right"
                                    app:tint="@color/light_grey" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manager_logout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginVertical="40dp"
                    android:backgroundTint="@color/red_light_variant"
                    android:text="Logout"
                    android:textColor="@color/red"
                    android:textFontWeight="500"
                    android:textSize="18sp"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/logout"
                    app:iconGravity="textStart"
                    app:iconSize="23dp"
                    app:iconTint="@color/red"
                    app:rippleColor="@color/red_light" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>