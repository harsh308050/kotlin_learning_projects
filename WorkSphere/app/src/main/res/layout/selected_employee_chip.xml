<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/light_grey"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp"
        android:gravity="center_vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/chip_employee_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chip_employee_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Employee Name"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/chip_employee_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="email@example.com"
                android:textColor="@color/light_grey"
                android:textSize="13sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/reassigned_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Reassigned"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:background="@drawable/circular_border"
            android:backgroundTint="@color/primary_blue_dark"
            android:visibility="gone" />
        <ImageButton
            android:id="@+id/chip_remove_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/close"
            app:tint="@color/black" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>