<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".manager.sites.ui.ManagerAddSiteActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/screen_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Site Configuration"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="22sp" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:text="Site Image"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <FrameLayout
                    android:id="@+id/addSiteImageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/dashed_border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/floating_btn"
                            android:backgroundTint="@color/blue_light"
                            android:padding="5dp"
                            android:src="@drawable/add"
                            app:tint="@color/primary_blue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tap to upload site image"
                            android:textAlignment="center"
                            android:textColor="@color/primary_blue"
                            android:textFontWeight="600"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="SVG, PNG or JPG"
                            android:textAlignment="center"
                            android:textColor="@color/light_grey" />
                    </LinearLayout>
                </FrameLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:id="@+id/selectedSiteImage"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/circular_border"
                        android:backgroundTint="@color/primary_blue"
                        android:scaleType="centerCrop"
                        android:src="@drawable/siteeee"
                        android:visibility="gone" />
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:text="Site Name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/site_name_field"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btnHeight"
                    android:background="@drawable/text_field"
                    android:drawableStart="@drawable/ic_building_small"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_grey"
                    android:hint="Enter site name"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:text="Client Name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/client_name_field"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btnHeight"
                    android:background="@drawable/text_field"
                    android:drawableStart="@drawable/ic_user_small"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_grey"
                    android:hint="Enter client name"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/supervisorFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:text="Site Supervisor"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/select_site_supervisor_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/text_field"
                        android:paddingHorizontal="20dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Select Supervisor"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/down_arrow" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/selected_supervisor_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/white"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/selected_supervisor_image"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/selected_supervisor_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="Supervisor Name"
                                    android:textColor="@color/black"
                                    android:textFontWeight="500"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/selected_supervisor_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="email@example.com"
                                    android:textColor="@color/light_grey"
                                    android:textFontWeight="400"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- Delete Button -->
                            <ImageButton
                                android:id="@+id/delete_supervisor_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Remove supervisor"
                                android:src="@drawable/close"
                                app:tint="@color/black" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:text="Supervisor Phone Number"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/site_supervisor_phone_number_field"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btnHeight"
                        android:background="@drawable/text_field"
                        android:drawableStart="@drawable/phone"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/light_grey"
                        android:hint="Enter Supervisor Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingHorizontal="20dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Site Location"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <!-- MapTouchWrapper wraps the map - THIS IS THE KEY -->
                <com.harsh.worksphere.components.MapTouchWrapper
                    android:id="@+id/map_touch_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <fragment
                            android:id="@+id/site_location_map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                </com.harsh.worksphere.components.MapTouchWrapper>

                <TextView
                    android:id="@+id/lat_lng_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Tap map to select location"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/site_address_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circular_border"
                    android:gravity="top|start"
                    android:hint="Enter Site Address"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:minLines="3"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="7dp"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:text="Work Details"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/site_work_details_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circular_border"
                    android:gravity="top|start"
                    android:hint="Enter Specific Site Instruction, entry codes, or safety requirements  "
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="-5dp"
                    android:minLines="7"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="7dp"
                    android:scrollbarSize="0dp"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <!-- Visit Timings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Visit Timings"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- From Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="From"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/visit_time_from_field"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/btnHeight"
                            android:background="@drawable/text_field"
                            android:drawableStart="@drawable/ic_clock"
                            android:drawablePadding="10dp"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:hint="Select Time"
                            android:paddingHorizontal="16dp"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- To Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="To"
                            android:textColor="@color/light_grey"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/visit_time_to_field"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/btnHeight"
                            android:background="@drawable/text_field"
                            android:drawableStart="@drawable/ic_clock"
                            android:drawablePadding="10dp"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:hint="Select Time"
                            android:paddingHorizontal="16dp"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/site_active_toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="false"
                android:text="Site Active"
                android:textSize="16sp"
                app:thumbTint="@color/manager_switch_thumb_color"
                app:trackDecorationTint="@color/primary_blue"
                app:trackTint="@color/manager_switch_track_color" />

            <!-- Site Status Dropdown (Edit Mode Only) -->
            <LinearLayout
                android:id="@+id/site_status_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Site Status"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <AutoCompleteTextView
                            android:id="@+id/site_status_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/transparent"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:drawableEnd="@drawable/ic_down_arrow_small"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="Select Status"
                            android:inputType="none"
                            android:paddingHorizontal="16dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_site_btn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginVertical="40dp"
                    android:backgroundTint="@color/primary_blue"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/transparent" />

                <ProgressBar
                    android:id="@+id/addsite_progress_bar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>