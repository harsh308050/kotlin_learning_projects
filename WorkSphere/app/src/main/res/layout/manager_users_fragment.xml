<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".manager.users.ManagerUsersFragment">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Users"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="22sp" />

    <!-- Search Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                app:tint="@color/light_grey" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@color/transparent"
                android:hint="Search by name, role, or ID..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:textSize="15sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Role Tabs (Supervisors / Employees) -->
    <RadioGroup
        android:id="@+id/roleTabGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/tab_background"
        android:orientation="horizontal"
        android:padding="4dp">

        <RadioButton
            android:id="@+id/tabSupervisors"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="Supervisors"
            android:textAllCaps="false"
            android:textColor="@color/tab_text_color_selector"
            android:textFontWeight="500"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/tabEmployees"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:button="@null"
            android:gravity="center"
            android:text="Employees"
            android:textAllCaps="false"
            android:textColor="@color/tab_text_color_selector"
            android:textFontWeight="500"
            android:textSize="15sp" />
    </RadioGroup>

    <!-- Status Filter Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Status Filter Chips -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/statusFilterContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/chip_filter_selector"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:text="All"
                    android:textColor="@color/chip_text_color_selector"
                    android:textFontWeight="500"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/chipOnSite"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/chip_filter_selector"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:text="On-site"
                    android:textColor="@color/chip_text_color_selector"
                    android:textFontWeight="500"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/chipOnBreak"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/chip_filter_selector"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:text="On Break"
                    android:textColor="@color/chip_text_color_selector"
                    android:textFontWeight="500"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/chipOffline"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/chip_filter_selector"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:text="Offline"
                    android:textColor="@color/chip_text_color_selector"
                    android:textFontWeight="500"
                    android:textSize="13sp" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Assignment Filter Dropdown -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/assignmentDropdown"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/assignmentDropdownText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All"
                    android:textColor="@color/dark_grey"
                    android:textFontWeight="500"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_down_arrow_small"
                    app:tint="@color/dark_grey" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/users_shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

            <include layout="@layout/shimmer_users_tile" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>
    <!-- Users RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="80dp" />
    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No users found"
            android:textColor="@color/light_grey"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>