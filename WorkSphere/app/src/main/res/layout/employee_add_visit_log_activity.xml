<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".employee.visitlogs.EmployeeAddVisitLogActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Log New Visit"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="22sp" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="15dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:text="Site Name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/employee_current_site_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btnHeight"
                    android:background="@drawable/text_field"
                    android:drawableStart="@drawable/ic_building_small"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:backgroundTint="@color/white_light"
                    android:drawableTint="@color/light_grey"
                    android:hint="Site name"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:text="Visit Date &amp; Time"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/visit_date_time_field"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btnHeight"
                    android:background="@drawable/text_field"
                    android:drawableStart="@drawable/ic_clock"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:backgroundTint="@color/white_light"
                    android:drawableTint="@color/light_grey"
                    android:hint="Feb 19, 2026 - 07:00 PM"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:text="Visit Notes"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/site_work_details_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circular_border"
                    android:gravity="top|start"
                    android:hint="Enter detailed observations, issues found, or maintained performance during this visit..."
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="-5dp"
                    android:minLines="7"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="7dp"
                    android:scrollbarSize="0dp"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:text="Evidence &amp; Attachments"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <FrameLayout
                    android:id="@+id/add_evidence_btn"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/green_dashed_border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/floating_btn"
                            android:backgroundTint="@color/light_green"
                            android:padding="5dp"
                            android:src="@drawable/add"
                            app:tint="@color/green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:text="Attach Evidence"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textFontWeight="500"
                            android:textSize="18dp" />
                    </LinearLayout>
                </FrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/evidence_preview_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" />
                <RelativeLayout
                    android:layout_marginVertical="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/employee_add_visit_log_btn"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/green"
                        android:text="Add Visit Log"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="16sp"
                        app:cornerRadius="10dp"
                        app:rippleColor="@color/primary_green_dark" />
                    <ProgressBar
                        android:visibility="gone"
                        android:indeterminateTint="@color/white"
                        android:id="@+id/employee_add_visit_log_loader"
                        android:layout_centerInParent="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>