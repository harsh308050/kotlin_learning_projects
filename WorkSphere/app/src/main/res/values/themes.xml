<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WorkSphere" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/mitr</item>
        <item name="fontFamily">@font/mitr</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
    </style>

    <style name="DropDownListViewStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.WorkSphere" parent="Base.Theme.WorkSphere" />

    <!-- TimePicker theme overlay using primary_blue -->
    <style name="ThemeOverlay.WorkSphere.TimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_blue_light</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorSecondaryContainer">@color/primary_blue_light</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorOnSurface">@color/primary_blue</item>
    </style>
</resources>