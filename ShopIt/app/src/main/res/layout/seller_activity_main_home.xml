<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".seller.SellerMainHomeActivity">


    <FrameLayout
        android:id="@+id/sellerFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/seller_bottom_nav" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/seller_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconSize="35dp"
        app:itemActiveIndicatorStyle="@color/transparent"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@color/seller_bottom_nav_icon_selector"
        app:itemRippleColor="@null"
        app:itemTextColor="@color/seller_bottom_nav_icon_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/seller_bottom_menu" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="91dp"
        app:dividerColor="@color/gray" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addProd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="65dp"
        android:background="@drawable/floatingbtnbg"
        android:backgroundTint="@color/secondary"
        android:src="@drawable/add"
        android:scaleType="fitXY"
        android:padding="10dp"
        app:backgroundTint="@color/secondary"
        app:maxImageSize="35dp"
        app:rippleColor="@color/secondaryLight"
        app:shapeAppearance="@drawable/floatingbtnbg"
        app:tint="@color/white" />
    </RelativeLayout>